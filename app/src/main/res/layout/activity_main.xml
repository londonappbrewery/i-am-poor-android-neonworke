<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TextView"
    style="@style/Base.Theme.AppCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="?android:attr/colorPressedHighlight"
    android:padding="45dp"
    android:paddingBottom="45dp"
    android:paddingLeft="45dp"
    android:paddingRight="45dp"
    android:paddingTop="45dp"
    android:theme="@style/Base.V21.Theme.AppCompat.Light"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:layout_width="290sp"
        android:layout_height="100sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        tools:text="@string/title"
        tools:textSize="55sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/I "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        app:srcCompat="@drawable/coal"
        android:contentDescription=""
        tools:ignore="ContentDescription,UnknownId" />
</RelativeLayout>
